<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sport Sphere - Checkout</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.2.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
        background-color: #f7f9fc;
      }

      /* Mobile menu styles */
      #mobile-menu {
        will-change: transform;
        backface-visibility: hidden;
      }

      /* Hide scrollbar for Chrome, Safari and Opera */
      #mobile-menu::-webkit-scrollbar {
        display: none;
      }

      /* Hide scrollbar for IE, Edge and Firefox */
      #mobile-menu {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }

      /* Prevent content shift when scrollbar appears/disappears */
      body.overflow-hidden {
        padding-right: var(--scrollbar-width, 0px);
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav
      class="bg-white shadow-sm border-b border-gray-100 fixed w-full top-0 z-[1002]"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <span
              class="text-2xl font-bold bg-gradient-to-r from-pink-500 to-purple-500 text-transparent bg-clip-text"
            >
              Sport Sphere
            </span>
          </div>
          <!-- Mobile Menu Button -->
          <div class="flex md:hidden">
            <button
              id="mobile-menu-button"
              class="z-[1001] p-2 rounded-lg text-gray-700 hover:bg-gray-50 focus:outline-none"
            >
              <i class="ri-menu-line text-2xl"></i>
            </button>
          </div>
          <!-- Desktop Menu -->
          <div class="hidden md:flex items-center space-x-4">
            <a
              href="/shop"
              class="px-4 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-store-2-line mr-2"></i>Shop
            </a>
            <a
              href="/cart"
              class="px-4 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-shopping-cart-2-line mr-2"></i>Cart
            </a>
            <a
              href="/user/orders"
              class="px-4 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-file-list-line mr-2"></i>Orders
            </a>
            <a
              href="/user/logout"
              class="px-4 py-2 bg-pink-500 text-white rounded-lg text-sm font-medium hover:bg-pink-600 transition-colors"
            >
              <i class="ri-logout-box-line mr-2"></i>Logout
            </a>
          </div>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div
        id="mobile-menu"
        class="fixed inset-0 bg-white z-[1001] transform translate-x-full transition-transform duration-300 md:hidden"
      >
        <div class="flex flex-col h-full">
          <!-- Mobile Menu Header -->
          <div
            class="flex items-center justify-between p-4 border-b border-gray-100"
          >
            <span
              class="text-xl font-bold bg-gradient-to-r from-pink-500 to-purple-500 text-transparent bg-clip-text"
            >
              Sport Sphere
            </span>
            <button
              id="close-menu-button"
              class="text-gray-500 hover:text-gray-700"
            >
              <i class="ri-close-line text-2xl"></i>
            </button>
          </div>

          <div class="flex-1 px-4 py-6 space-y-4 overflow-y-auto">
            <a
              href="/shop"
              class="block px-3 py-2 rounded-lg text-base font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-store-2-line mr-2"></i>
              Shop
            </a>
            <a
              href="/cart"
              class="block px-3 py-2 rounded-lg text-base font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-shopping-cart-2-line mr-2"></i>
              Cart
            </a>
            <a
              href="/user/orders"
              class="block px-3 py-2 rounded-lg text-base font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-file-list-line mr-2"></i>
              Orders
            </a>
            <a
              href="/user/logout"
              class="block px-3 py-2 bg-pink-500 text-white rounded-lg text-base font-medium hover:bg-pink-600"
            >
              <i class="ri-logout-box-line mr-2"></i>
              Logout
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Checkout Section -->
    <div class="min-h-screen pt-20 pb-12">
      <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Page Header -->
        <div class="mb-8">
          <h1 class="text-2xl font-bold text-gray-900">Checkout</h1>
          <p class="mt-1 text-sm text-gray-500">
            Complete your order by providing delivery details
          </p>
        </div>

        <!-- Checkout Form -->
        <div
          class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden"
        >
          <form
            action="/checkout"
            method="POST"
            class="divide-y divide-gray-100"
          >
            <!-- Personal Details Section -->
            <div class="p-6">
              <h2 class="text-lg font-medium text-gray-900 mb-4">
                Personal Details
              </h2>
              <div class="space-y-4">
                <div>
                  <label
                    class="block text-sm font-medium text-gray-700 mb-2"
                    for="fullname"
                  >
                    Full Name
                  </label>
                  <input
                    type="text"
                    id="fullname"
                    name="fullname"
                    required
                    class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent"
                    placeholder="Enter your full name"
                  />
                </div>

                <div>
                  <label
                    class="block text-sm font-medium text-gray-700 mb-2"
                    for="email"
                  >
                    Email
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    value="<%= user.email %>"
                    readonly
                    class="w-full px-4 py-2 rounded-lg border border-gray-200 bg-gray-50 text-gray-700 focus:outline-none cursor-not-allowed"
                  />
                </div>

                <div>
                  <label
                    class="block text-sm font-medium text-gray-700 mb-2"
                    for="contact"
                  >
                    Contact Number
                  </label>
                  <input
                    type="tel"
                    id="contact"
                    name="contact"
                    required
                    class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent"
                    placeholder="Enter your contact number"
                  />
                </div>
              </div>
            </div>

            <!-- Delivery Details Section -->
            <div class="p-6">
              <h2 class="text-lg font-medium text-gray-900 mb-4">
                Delivery Details
              </h2>
              <div>
                <label
                  class="block text-sm font-medium text-gray-700 mb-2"
                  for="address"
                >
                  Delivery Address
                </label>
                <textarea
                  id="address"
                  name="address"
                  required
                  rows="3"
                  class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent"
                  placeholder="Enter your complete delivery address"
                ></textarea>
              </div>
            </div>

            <!-- Payment Section -->
            <div class="p-6">
              <h2 class="text-lg font-medium text-gray-900 mb-4">
                Payment Method
              </h2>
              <div>
                <select
                  id="payment"
                  name="payment"
                  required
                  class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent"
                >
                  <option value="" disabled selected>
                    Select payment method
                  </option>
                  <option value="credit_card">Credit Card</option>
                  <option value="debit_card">Debit Card</option>
                  <option value="upi">UPI</option>
                  <option value="net_banking">Net Banking</option>
                  <option value="cod">Cash on Delivery</option>
                </select>
              </div>
            </div>

            <!-- Submit Button Section -->
            <div class="p-6 bg-gray-50">
              <button
                type="submit"
                class="w-full flex items-center justify-center px-6 py-3 bg-pink-500 text-white rounded-lg hover:bg-pink-600 transition-colors font-medium"
              >
                <i class="ri-secure-payment-line mr-2"></i>
                Place Order
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Mobile menu functionality
        const mobileMenuButton = document.getElementById("mobile-menu-button");
        const closeMenuButton = document.getElementById("close-menu-button");
        const mobileMenu = document.getElementById("mobile-menu");

        function toggleMobileMenu() {
          if (mobileMenu.style.transform === "translateX(0px)") {
            mobileMenu.style.transform = "translateX(100%)";
            document.body.style.overflow = "";
          } else {
            mobileMenu.style.transform = "translateX(0)";
            document.body.style.overflow = "hidden";
          }
        }

        mobileMenuButton.addEventListener("click", toggleMobileMenu);
        closeMenuButton.addEventListener("click", toggleMobileMenu);

        // Close mobile menu on ESC key
        document.addEventListener("keydown", function (e) {
          if (
            e.key === "Escape" &&
            mobileMenu.style.transform === "translateX(0px)"
          ) {
            toggleMobileMenu();
          }
        });

        // Close mobile menu when clicking outside
        document.addEventListener("click", (e) => {
          if (
            mobileMenu.style.transform === "translateX(0px)" &&
            !mobileMenuButton.contains(e.target) &&
            !mobileMenu.contains(e.target)
          ) {
            toggleMobileMenu();
          }
        });
      });
    </script>
    <%- include('./partials/footer') %>
  </body>
</html>
