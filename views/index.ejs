<%- include('./partials/header') %> <% if (error.length > 0) { %>
<div
  class="fixed top-5 left-1/2 transform -translate-x-1/2 bg-red-500 text-white p-3 rounded-md shadow-md"
>
  <span><%= error %></span>
</div>
<% } %>

<div
  class="flex justify-center items-center min-h-screen bg-gradient-to-r from-purple-500 via-pink-500 to-red-500 p-4"
>
  <div
    class="w-full max-w-4xl bg-white shadow-2xl rounded-3xl overflow-hidden flex flex-col md:flex-row"
  >
    <!-- Toggle Switch for Small Screens -->
    <div
      class="md:hidden flex justify-center p-4 bg-gradient-to-r from-pink-400 to-pink-600 rounded-t-3xl"
    >
      <div class="relative w-64">
        <div class="flex bg-white bg-opacity-20 rounded-full shadow-md p-1">
          <button
            id="showSignup"
            class="flex-1 px-6 py-3 text-white font-semibold rounded-full transition-all active bg-pink-500"
          >
            Sign Up
          </button>
          <button
            id="showLogin"
            class="flex-1 px-6 py-3 text-white font-semibold rounded-full transition-all"
          >
            Log In
          </button>
        </div>
      </div>
    </div>

    <!-- Register Section -->
    <div
      id="signupSection"
      class="p-12 flex flex-col justify-center w-full md:w-1/2"
    >
      <h3 class="text-3xl md:text-5xl font-extrabold text-gray-800 mb-6">
        Welcome to <span class="text-pink-500">Sport Sphere</span>
      </h3>
      <h4 class="text-lg md:text-xl text-gray-600 mb-6">Create your account</h4>
      <form
        autocomplete="off"
        action="/user/register"
        method="post"
        class="space-y-4 md:space-y-5"
      >
        <input
          class="w-full px-5 py-3 rounded-lg border border-gray-300 focus:ring-4 focus:ring-pink-400"
          type="text"
          placeholder="Full Name"
          name="fullname"
          required
        />
        <input
          class="w-full px-5 py-3 rounded-lg border border-gray-300 focus:ring-4 focus:ring-pink-400"
          type="email"
          placeholder="Email"
          name="email"
          required
        />
        <input
          class="w-full px-5 py-3 rounded-lg border border-gray-300 focus:ring-4 focus:ring-pink-400"
          type="password"
          placeholder="Password"
          name="password"
          required
        />
        <button
          class="w-full py-3 bg-pink-500 hover:bg-pink-600 text-white font-semibold rounded-lg shadow-lg transition"
        >
          Create My Account
        </button>
      </form>
    </div>

    <!-- Login Section -->
    <div
      id="loginSection"
      class="p-12 bg-gradient-to-b from-pink-100 to-pink-300 flex flex-col justify-center w-full md:w-1/2 hidden md:flex"
    >
      <h4 class="text-2xl md:text-3xl font-semibold text-gray-800 mb-6">
        Login to your account
      </h4>
      <form
        autocomplete="off"
        action="/user/login"
        method="post"
        class="space-y-4 md:space-y-5"
      >
        <input
          class="w-full px-5 py-3 rounded-lg border border-gray-300 focus:ring-4 focus:ring-pink-400"
          type="email"
          placeholder="Email"
          name="email"
          required
        />
        <input
          class="w-full px-5 py-3 rounded-lg border border-gray-300 focus:ring-4 focus:ring-pink-400"
          type="password"
          placeholder="Password"
          name="password"
          required
        />
        <button
          class="w-full py-3 bg-pink-500 hover:bg-pink-600 text-white font-semibold rounded-lg shadow-lg transition"
        >
          Login
        </button>
      </form>
    </div>
  </div>
</div>

<script>
  const signupBtn = document.getElementById("showSignup");
  const loginBtn = document.getElementById("showLogin");

  signupBtn.addEventListener("click", function () {
    document.getElementById("signupSection").classList.remove("hidden");
    document.getElementById("loginSection").classList.add("hidden");
    signupBtn.classList.add("bg-pink-500");
    loginBtn.classList.remove("bg-pink-500");
  });

  loginBtn.addEventListener("click", function () {
    document.getElementById("loginSection").classList.remove("hidden");
    document.getElementById("signupSection").classList.add("hidden");
    loginBtn.classList.add("bg-pink-500");
    signupBtn.classList.remove("bg-pink-500");
  });
</script>

<%- include('./partials/footer') %>
