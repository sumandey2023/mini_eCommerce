<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sport Sphere - Admin Orders</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.2.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
        background-color: #f7f9fc;
      }

      /* Mobile menu styles */
      #mobile-menu {
        will-change: transform;
        backface-visibility: hidden;
      }

      /* Hide scrollbar for Chrome, Safari and Opera */
      #mobile-menu::-webkit-scrollbar {
        display: none;
      }

      /* Hide scrollbar for IE, Edge and Firefox */
      #mobile-menu {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }

      /* Prevent content shift when scrollbar appears/disappears */
      body.overflow-hidden {
        padding-right: var(--scrollbar-width, 0px);
      }

      /* Responsive table styles */
      @media (max-width: 768px) {
        .responsive-table {
          display: block;
          max-width: 100%;
          margin: 0 auto;
          background: transparent;
          border-radius: 0;
          overflow: visible;
          padding: 0 1rem;
        }

        .responsive-table tbody {
          display: flex;
          flex-direction: column;
          align-items: center;
          width: 100%;
          background: transparent;
        }

        .responsive-table tbody tr {
          display: block;
          padding: 1.5rem;
          margin-bottom: 1.25rem;
          background: white;
          border: 1px solid #e5e7eb;
          border-radius: 1rem;
          box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
            0 2px 4px -1px rgba(0, 0, 0, 0.06);
          transition: all 0.3s ease;
          width: 100%;
          max-width: 450px;
        }

        /* Orders container styles */
        .orders-container {
          max-width: 500px;
          margin: 0 auto;
          padding: 0 1rem;
          background: transparent;
        }

        .responsive-table tbody tr:hover {
          transform: translateY(-2px);
          box-shadow: 0 6px 8px -1px rgba(0, 0, 0, 0.1),
            0 4px 6px -1px rgba(0, 0, 0, 0.06);
        }

        .responsive-table thead {
          display: none;
        }

        .responsive-table tbody td {
          display: flex;
          justify-content: space-between;
          align-items: flex-start;
          padding: 0.875rem 0;
          border: none;
          border-bottom: 1px solid #f3f4f6;
        }

        .responsive-table tbody td:last-child {
          border-bottom: none;
          padding-bottom: 0;
        }

        .responsive-table tbody td:first-child {
          padding-top: 0;
        }

        .responsive-table tbody td::before {
          content: attr(data-label);
          font-weight: 600;
          margin-right: 1.5rem;
          min-width: 120px;
          color: #4b5563;
          font-size: 0.875rem;
        }

        /* Customer info styling */
        .responsive-table .customer-info {
          display: flex;
          flex-direction: column;
          gap: 0.25rem;
        }

        .responsive-table .customer-name {
          font-weight: 600;
          color: #111827;
          font-size: 0.975rem;
        }

        .responsive-table .customer-email {
          color: #6b7280;
          font-size: 0.875rem;
        }

        /* Product tags in mobile view */
        .responsive-table .product-tags {
          display: flex;
          flex-direction: column;
          align-items: flex-end;
          gap: 0.5rem;
          margin-left: auto;
          text-align: right;
        }

        .responsive-table .product-tag {
          background: #f3f4f6;
          color: #374151;
          padding: 0.375rem 0.75rem;
          border-radius: 0.5rem;
          font-size: 0.875rem;
          font-weight: 500;
          white-space: nowrap;
          display: inline-block;
        }

        /* Status badge in mobile view */
        .responsive-table .status-badge {
          margin-left: auto;
          padding: 0.375rem 1rem;
          font-weight: 600;
        }

        /* Amount styling */
        .responsive-table .amount {
          font-weight: 600;
          color: #111827;
          font-size: 1rem;
        }

        /* Action buttons in mobile view */
        .responsive-table .action-buttons {
          justify-content: flex-end;
          width: 100%;
        }

        .responsive-table .delete-button {
          background-color: #fee2e2;
          color: #dc2626;
          padding: 0.5rem 1rem;
          border-radius: 0.5rem;
          font-weight: 500;
          transition: all 0.3s ease;
        }

        .responsive-table .delete-button:hover {
          background-color: #fca5a5;
        }
      }
    </style>
  </head>
  <body>
    <!-- Modern Admin Navbar -->
    <nav
      class="bg-white shadow-sm border-b border-gray-100 fixed w-full top-0 z-[1002]"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <span
              class="text-2xl font-bold bg-gradient-to-r from-pink-500 to-purple-500 text-transparent bg-clip-text"
            >
              Sport Sphere Admin
            </span>
          </div>

          <!-- Mobile menu button -->
          <div class="flex md:hidden">
            <button
              id="mobile-menu-button"
              class="z-[1001] p-2 rounded-lg text-gray-700 hover:bg-gray-50 focus:outline-none"
            >
              <i class="ri-menu-line text-2xl"></i>
            </button>
          </div>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-4">
            <a
              href="/owner/admin"
              class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-add-circle-line mr-2"></i>
              Create Product
            </a>
            <a
              href="/owner/allProducts"
              class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-shopping-bag-line mr-2"></i>
              All Products
            </a>
            <a
              href="/owner/orders"
              class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-pink-50 text-pink-700"
            >
              <i class="ri-file-list-line mr-2"></i>
              Orders
            </a>
            <a
              href="/user/logout"
              class="inline-flex items-center px-4 py-2 bg-pink-500 text-white rounded-lg text-sm font-medium hover:bg-pink-600 transition-colors"
            >
              <i class="ri-logout-box-line mr-2"></i>
              Logout
            </a>
          </div>
        </div>
      </div>

      <!-- Mobile Navigation -->
      <div
        id="mobile-menu"
        class="fixed inset-0 bg-white z-[1001] transform translate-x-full transition-transform duration-300 md:hidden"
      >
        <div class="flex flex-col h-full">
          <!-- Mobile Menu Header -->
          <div
            class="flex items-center justify-between p-4 border-b border-gray-100"
          >
            <span
              class="text-xl font-bold bg-gradient-to-r from-pink-500 to-purple-500 text-transparent bg-clip-text"
            >
              Sport Sphere
            </span>
            <button
              id="close-menu-button"
              class="text-gray-500 hover:text-gray-700"
            >
              <i class="ri-close-line text-2xl"></i>
            </button>
          </div>

          <div class="flex-1 px-4 py-6 space-y-4 overflow-y-auto">
            <a
              href="/owner/admin"
              class="block px-3 py-2 rounded-lg text-base font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-add-circle-line mr-2"></i>
              Create Product
            </a>
            <a
              href="/owner/allProducts"
              class="block px-3 py-2 rounded-lg text-base font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-shopping-bag-line mr-2"></i>
              All Products
            </a>
            <a
              href="/owner/orders"
              class="block px-3 py-2 rounded-lg text-base font-medium bg-pink-50 text-pink-700"
            >
              <i class="ri-file-list-line mr-2"></i>
              Orders
            </a>
            <a
              href="/user/logout"
              class="block px-3 py-2 bg-pink-500 text-white rounded-lg text-base font-medium hover:bg-pink-600"
            >
              <i class="ri-logout-box-line mr-2"></i>
              Logout
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Success/Error Messages -->
    <% if(success && success.length > 0){ %>
    <div
      id="successPopup"
      class="fixed top-20 right-4 bg-green-50 border border-green-200 text-green-700 px-6 py-4 rounded-xl shadow-lg z-50"
    >
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <i class="ri-checkbox-circle-line text-xl mr-2"></i>
          <p class="font-medium"><%= success %></p>
        </div>
        <button
          class="ml-6 text-green-500 hover:text-green-700"
          onclick="closePopup()"
        >
          <i class="ri-close-line text-xl"></i>
        </button>
      </div>
    </div>
    <% } %> <% if(error && error.length > 0){ %>
    <div
      id="errorPopup"
      class="fixed top-20 right-4 bg-red-50 border border-red-200 text-red-700 px-6 py-4 rounded-xl shadow-lg z-50"
    >
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <i class="ri-error-warning-line text-xl mr-2"></i>
          <p class="font-medium"><%= error %></p>
        </div>
        <button
          class="ml-6 text-red-500 hover:text-red-700"
          onclick="closeErrorPopup()"
        >
          <i class="ri-close-line text-xl"></i>
        </button>
      </div>
    </div>
    <% } %>

    <!-- Orders Section -->
    <div class="min-h-screen pt-20 pb-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Page Header -->
        <div class="mb-8 text-center md:text-left">
          <h1 class="text-2xl font-bold text-gray-900">All Orders</h1>
          <p class="mt-1 text-sm text-gray-500">
            Manage and track all customer orders
          </p>
        </div>

        <!-- Orders Table -->
        <div class="orders-container">
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 responsive-table">
              <thead class="bg-gray-50">
                <tr>
                  <th
                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                  >
                    Customer
                  </th>
                  <th
                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                  >
                    Contact
                  </th>
                  <th
                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                  >
                    Products
                  </th>
                  <th
                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                  >
                    Amount
                  </th>
                  <th
                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                  >
                    Status
                  </th>
                  <th
                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                  >
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 md:bg-white">
                <% orders.forEach(order => { %>
                <tr class="hover:bg-gray-50">
                  <td data-label="Customer" class="px-6 py-4">
                    <div class="customer-info">
                      <div class="customer-name"><%= order.customerName %></div>
                      <div class="customer-email"><%= order.email %></div>
                    </div>
                  </td>
                  <td data-label="Contact" class="px-6 py-4">
                    <div class="customer-info">
                      <div class="customer-name"><%= order.contact %></div>
                      <div class="customer-email truncate max-w-[200px]">
                        <%= order.address %>
                      </div>
                    </div>
                  </td>
                  <td data-label="Products" class="px-6 py-4">
                    <div class="product-tags">
                      <% order.products.forEach(product => { %>
                      <span class="product-tag"> <%= product.name %> </span>
                      <% }) %>
                    </div>
                  </td>
                  <td data-label="Amount" class="px-6 py-4">
                    <div class="amount">â‚¹<%= order.totalAmount %></div>
                  </td>
                  <td data-label="Status" class="px-6 py-4">
                    <span
                      class="status-badge inline-flex items-center rounded-full text-xs font-medium <%= order.status === 'Processing' ? 'bg-yellow-100 text-yellow-800' : order.status === 'Shipped' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' %>"
                    >
                      <%= order.status %>
                    </span>
                  </td>
                  <td data-label="Actions" class="px-6 py-4">
                    <div class="action-buttons">
                      <form
                        action="/owner/delete-order/<%= order.orderId %>"
                        method="POST"
                        onsubmit="return confirm('Are you sure you want to delete this order?');"
                        class="inline-block"
                      >
                        <button
                          type="submit"
                          class="delete-button inline-flex items-center"
                        >
                          <i class="ri-delete-bin-line mr-1"></i>
                          Delete
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Mobile menu functionality
        const mobileMenuButton = document.getElementById("mobile-menu-button");
        const closeMenuButton = document.getElementById("close-menu-button");
        const mobileMenu = document.getElementById("mobile-menu");

        function toggleMobileMenu() {
          if (mobileMenu.style.transform === "translateX(0px)") {
            mobileMenu.style.transform = "translateX(100%)";
            document.body.style.overflow = "";
          } else {
            mobileMenu.style.transform = "translateX(0)";
            document.body.style.overflow = "hidden";
          }
        }

        mobileMenuButton.addEventListener("click", toggleMobileMenu);
        closeMenuButton.addEventListener("click", toggleMobileMenu);

        // Close mobile menu on ESC key
        document.addEventListener("keydown", function (e) {
          if (
            e.key === "Escape" &&
            mobileMenu.style.transform === "translateX(0px)"
          ) {
            toggleMobileMenu();
          }
        });

        // Close mobile menu when clicking outside
        document.addEventListener("click", (e) => {
          if (
            mobileMenu.style.transform === "translateX(0px)" &&
            !mobileMenuButton.contains(e.target) &&
            !mobileMenu.contains(e.target)
          ) {
            toggleMobileMenu();
          }
        });

        // Popup close functionality
        function closePopup() {
          const successPopup = document.getElementById("successPopup");
          if (successPopup) {
            successPopup.classList.add("opacity-0", "translate-x-full");
            setTimeout(() => {
              successPopup.remove();
            }, 300);
          }
        }

        function closeErrorPopup() {
          const errorPopup = document.getElementById("errorPopup");
          if (errorPopup) {
            errorPopup.classList.add("opacity-0", "translate-x-full");
            setTimeout(() => {
              errorPopup.remove();
            }, 300);
          }
        }
      });
    </script>
  </body>
</html>
