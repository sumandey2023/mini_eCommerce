<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sport Sphere - Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.2.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
        background-color: #f7f9fc;
      }

      /* Mobile menu styles */
      #mobile-menu {
        will-change: transform;
        backface-visibility: hidden;
      }

      /* Hide scrollbar for Chrome, Safari and Opera */
      #mobile-menu::-webkit-scrollbar {
        display: none;
      }

      /* Hide scrollbar for IE, Edge and Firefox */
      #mobile-menu {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }

      /* Prevent content shift when scrollbar appears/disappears */
      body.overflow-hidden {
        padding-right: var(--scrollbar-width, 0px);
      }
    </style>
  </head>
  <body>
    <!-- Modern Admin Navbar -->
    <nav
      class="bg-white shadow-sm border-b border-gray-100 fixed w-full top-0 z-[1002]"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <span
              class="text-2xl font-bold bg-gradient-to-r from-pink-500 to-purple-500 text-transparent bg-clip-text"
            >
              Sport Sphere
            </span>
          </div>

          <!-- Mobile menu button -->
          <div class="flex md:hidden">
            <button
              id="mobile-menu-button"
              class="z-[1001] p-2 rounded-lg text-gray-700 hover:bg-gray-50 focus:outline-none"
            >
              <i class="ri-menu-line text-2xl"></i>
            </button>
          </div>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-4">
            <a
              href="/owner/admin"
              class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-pink-50 text-pink-700"
            >
              <i class="ri-add-circle-line mr-2"></i>
              Create Product
            </a>
            <a
              href="/owner/allProducts"
              class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-shopping-bag-line mr-2"></i>
              All Products
            </a>
            <a
              href="/owner/orders"
              class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-file-list-line mr-2"></i>
              Orders
            </a>
            <a
              href="/user/logout"
              class="inline-flex items-center px-4 py-2 bg-pink-500 text-white rounded-lg text-sm font-medium hover:bg-pink-600 transition-colors"
            >
              <i class="ri-logout-box-line mr-2"></i>
              Logout
            </a>
          </div>
        </div>
      </div>

      <!-- Mobile Navigation -->
      <div
        id="mobile-menu"
        class="fixed inset-0 bg-white z-[1001] transform translate-x-full transition-transform duration-300 md:hidden"
      >
        <div class="flex flex-col h-full">
          <!-- Mobile Menu Header -->
          <div
            class="flex items-center justify-between p-4 border-b border-gray-100"
          >
            <span
              class="text-xl font-bold bg-gradient-to-r from-pink-500 to-purple-500 text-transparent bg-clip-text"
            >
              Sport Sphere
            </span>
            <button
              id="close-menu-button"
              class="text-gray-500 hover:text-gray-700"
            >
              <i class="ri-close-line text-2xl"></i>
            </button>
          </div>

          <div class="flex-1 px-4 py-6 space-y-4 overflow-y-auto">
            <a
              href="/owner/admin"
              class="block px-3 py-2 rounded-lg text-base font-medium bg-pink-50 text-pink-700"
            >
              <i class="ri-add-circle-line mr-2"></i>
              Create Product
            </a>
            <a
              href="/owner/allProducts"
              class="block px-3 py-2 rounded-lg text-base font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-shopping-bag-line mr-2"></i>
              All Products
            </a>
            <a
              href="/owner/orders"
              class="block px-3 py-2 rounded-lg text-base font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-file-list-line mr-2"></i>
              Orders
            </a>
            <a
              href="/user/logout"
              class="block px-3 py-2 bg-pink-500 text-white rounded-lg text-base font-medium hover:bg-pink-600"
            >
              <i class="ri-logout-box-line mr-2"></i>
              Logout
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="pt-20 pb-8 px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <!-- Page Header -->
        <div class="mb-8">
          <h1 class="text-2xl font-bold text-gray-900">Create New Product</h1>
          <p class="mt-1 text-sm text-gray-500">
            Add a new product to your store
          </p>
        </div>

        <!-- Product Form -->
        <div
          class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden"
        >
          <form
            action="/owner/create"
            method="post"
            enctype="multipart/form-data"
            class="divide-y divide-gray-100"
          >
            <!-- Basic Info Section -->
            <div class="p-6 space-y-6">
              <h2 class="text-lg font-medium text-gray-900">
                Basic Information
              </h2>
              <div class="grid grid-cols-1 gap-6">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    Product Name
                  </label>
                  <input
                    type="text"
                    name="name"
                    required
                    class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent"
                  />
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                      Price (₹)
                    </label>
                    <input
                      type="number"
                      name="price"
                      required
                      class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent"
                    />
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                      Discount (₹)
                    </label>
                    <input
                      type="number"
                      name="discount"
                      value="0"
                      required
                      class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent"
                    />
                  </div>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    Category
                  </label>
                  <select
                    name="category"
                    required
                    class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent"
                  >
                    <option value="Cricket">Cricket</option>
                    <option value="Football">Football</option>
                    <option value="Basketball">Basketball</option>
                    <option value="Fitness">Fitness</option>
                    <option value="Other">Other</option>
                  </select>
                </div>
              </div>
            </div>

            <!-- Image Section -->
            <div class="p-6 space-y-6">
              <h2 class="text-lg font-medium text-gray-900">Product Image</h2>
              <div class="space-y-2">
                <label class="block text-sm font-medium text-gray-700">
                  Upload Image
                </label>
                <input
                  type="file"
                  name="image"
                  accept="image/*"
                  required
                  class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-transparent"
                />
              </div>
            </div>

            <!-- Styling Section -->
            <div class="p-6 space-y-6">
              <h2 class="text-lg font-medium text-gray-900">Product Styling</h2>
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    Background Color
                  </label>
                  <input
                    type="color"
                    name="bgcolor"
                    required
                    class="w-full h-10 rounded-lg cursor-pointer"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    Panel Color
                  </label>
                  <input
                    type="color"
                    name="panelcolor"
                    required
                    class="w-full h-10 rounded-lg cursor-pointer"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    Text Color
                  </label>
                  <input
                    type="color"
                    name="textcolor"
                    required
                    class="w-full h-10 rounded-lg cursor-pointer"
                  />
                </div>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="px-6 py-4 bg-gray-50">
              <button
                type="submit"
                class="w-full flex justify-center items-center px-4 py-3 bg-pink-500 text-white rounded-lg hover:bg-pink-600 transition-colors font-medium"
              >
                <i class="ri-add-circle-line mr-2"></i>
                Create Product
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Mobile menu functionality
        const mobileMenuButton = document.getElementById("mobile-menu-button");
        const closeMenuButton = document.getElementById("close-menu-button");
        const mobileMenu = document.getElementById("mobile-menu");

        function toggleMobileMenu() {
          if (mobileMenu.style.transform === "translateX(0px)") {
            mobileMenu.style.transform = "translateX(100%)";
            document.body.style.overflow = "";
          } else {
            mobileMenu.style.transform = "translateX(0)";
            document.body.style.overflow = "hidden";
          }
        }

        mobileMenuButton.addEventListener("click", toggleMobileMenu);
        closeMenuButton.addEventListener("click", toggleMobileMenu);

        // Close mobile menu on ESC key
        document.addEventListener("keydown", function (e) {
          if (
            e.key === "Escape" &&
            mobileMenu.style.transform === "translateX(0px)"
          ) {
            toggleMobileMenu();
          }
        });

        // Close mobile menu when clicking outside
        document.addEventListener("click", (e) => {
          if (
            mobileMenu.style.transform === "translateX(0px)" &&
            !mobileMenuButton.contains(e.target) &&
            !mobileMenu.contains(e.target)
          ) {
            toggleMobileMenu();
          }
        });
      });
    </script>
  </body>
</html>
