<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sport Sphere - My Orders</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.2.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
        background-color: #f7f9fc;
      }

      /* Mobile menu styles */
      #mobile-menu {
        will-change: transform;
        backface-visibility: hidden;
      }

      /* Hide scrollbar for Chrome, Safari and Opera */
      #mobile-menu::-webkit-scrollbar {
        display: none;
      }

      /* Hide scrollbar for IE, Edge and Firefox */
      #mobile-menu {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }

      /* Prevent content shift when scrollbar appears/disappears */
      body.overflow-hidden {
        padding-right: var(--scrollbar-width, 0px);
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav
      class="bg-white shadow-sm border-b border-gray-100 fixed w-full top-0 z-[1002]"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <span
              class="text-2xl font-bold bg-gradient-to-r from-pink-500 to-purple-500 text-transparent bg-clip-text"
            >
              Sport Sphere
            </span>
          </div>
          <!-- Mobile Menu Button -->
          <div class="flex md:hidden">
            <button
              id="mobile-menu-button"
              class="z-[1001] p-2 rounded-lg text-gray-700 hover:bg-gray-50 focus:outline-none"
            >
              <i class="ri-menu-line text-2xl"></i>
            </button>
          </div>
          <!-- Desktop Menu -->
          <div class="hidden md:flex items-center space-x-4">
            <a
              href="/shop"
              class="px-4 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-store-2-line mr-2"></i>Shop
            </a>
            <a
              href="/cart"
              class="px-4 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-shopping-cart-2-line mr-2"></i>Cart
            </a>
            <a
              href="/user/orders"
              class="px-4 py-2 rounded-lg text-sm font-medium bg-pink-50 text-pink-700"
            >
              <i class="ri-file-list-line mr-2"></i>Orders
            </a>
            <a
              href="/user/logout"
              class="px-4 py-2 bg-pink-500 text-white rounded-lg text-sm font-medium hover:bg-pink-600 transition-colors"
            >
              <i class="ri-logout-box-line mr-2"></i>Logout
            </a>
          </div>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div
        id="mobile-menu"
        class="fixed inset-0 bg-white z-[1001] transform translate-x-full transition-transform duration-300 md:hidden"
      >
        <div class="flex flex-col h-full">
          <!-- Mobile Menu Header -->
          <div
            class="flex items-center justify-between p-4 border-b border-gray-100"
          >
            <span
              class="text-xl font-bold bg-gradient-to-r from-pink-500 to-purple-500 text-transparent bg-clip-text"
            >
              Sport Sphere
            </span>
            <button
              id="close-menu-button"
              class="text-gray-500 hover:text-gray-700"
            >
              <i class="ri-close-line text-2xl"></i>
            </button>
          </div>

          <div class="flex-1 px-4 py-6 space-y-4 overflow-y-auto">
            <a
              href="/shop"
              class="block px-3 py-2 rounded-lg text-base font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-store-2-line mr-2"></i>
              Shop
            </a>
            <a
              href="/cart"
              class="block px-3 py-2 rounded-lg text-base font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-shopping-cart-2-line mr-2"></i>
              Cart
            </a>
            <a
              href="/user/orders"
              class="block px-3 py-2 rounded-lg text-base font-medium bg-pink-50 text-pink-700"
            >
              <i class="ri-file-list-line mr-2"></i>
              Orders
            </a>
            <a
              href="/user/logout"
              class="block px-3 py-2 bg-pink-500 text-white rounded-lg text-base font-medium hover:bg-pink-600"
            >
              <i class="ri-logout-box-line mr-2"></i>
              Logout
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Orders Section -->
    <div class="min-h-screen pt-20 pb-12">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Page Header -->
        <div class="mb-8">
          <h1 class="text-2xl font-bold text-gray-900">My Orders</h1>
          <p class="mt-1 text-sm text-gray-500">Track and manage your orders</p>
        </div>

        <% if(orders.length === 0) { %>
        <!-- Empty Orders State -->
        <div
          class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 text-center"
        >
          <div class="mb-4">
            <i class="ri-shopping-bag-line text-5xl text-gray-300"></i>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No orders yet</h3>
          <p class="text-gray-500 mb-6">
            Start shopping to see your orders here
          </p>
          <a
            href="/shop"
            class="inline-flex items-center px-4 py-2 bg-pink-500 text-white rounded-lg hover:bg-pink-600 transition-colors"
          >
            <i class="ri-store-2-line mr-2"></i>
            Go to Shop
          </a>
        </div>
        <% } else { %>
        <!-- Orders List -->
        <div class="space-y-4">
          <% orders.reverse().forEach(order => { %>
          <div
            class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow"
          >
            <div class="p-4 sm:p-6">
              <!-- Order Header -->
              <div
                class="flex flex-col sm:flex-row sm:items-center justify-between mb-4"
              >
                <div class="flex items-center space-x-4 mb-2 sm:mb-0">
                  <div class="flex-shrink-0">
                    <div
                      class="w-12 h-12 bg-pink-50 rounded-full flex items-center justify-center"
                    >
                      <i
                        class="ri-shopping-bag-line text-2xl text-pink-500"
                      ></i>
                    </div>
                  </div>
                  <div>
                    <p class="text-sm text-gray-500">
                      <%= new Date(order.date).toLocaleDateString('en-US', {
                      year: 'numeric', month: 'long', day: 'numeric' }) %>
                    </p>
                    <p class="text-sm font-medium text-gray-900 mt-1">
                      Order #<%= order.orderId %>
                    </p>
                  </div>
                </div>
                <span
                  class="px-3 py-1 text-xs rounded-full <%= order.status === 'Processing' ? 'bg-yellow-100 text-yellow-800' : order.status === 'Shipped' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' %>"
                >
                  <%= order.status %>
                </span>
              </div>

              <!-- Order Products -->
              <div class="border-t border-gray-100 pt-4">
                <div class="flex flex-wrap gap-2">
                  <% order.products.forEach(product => { %>
                  <span
                    class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-gray-100 text-gray-800"
                  >
                    <%= product.name %>
                  </span>
                  <% }) %>
                </div>
              </div>

              <!-- Order Footer -->
              <div
                class="flex flex-col sm:flex-row justify-between items-start sm:items-center mt-4 pt-4 border-t border-gray-100"
              >
                <div class="text-sm text-gray-500 mb-2 sm:mb-0">
                  <i class="ri-map-pin-line mr-1"></i>
                  Delivery to: <%= order.address.substring(0, 50) %><%=
                  order.address.length > 50 ? '...' : '' %>
                </div>
                <div class="text-lg font-bold text-gray-900">
                  â‚¹<%= order.totalAmount %>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        <% } %>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Mobile menu functionality
        const mobileMenuButton = document.getElementById("mobile-menu-button");
        const closeMenuButton = document.getElementById("close-menu-button");
        const mobileMenu = document.getElementById("mobile-menu");

        function toggleMobileMenu() {
          if (mobileMenu.style.transform === "translateX(0px)") {
            mobileMenu.style.transform = "translateX(100%)";
            document.body.style.overflow = "";
          } else {
            mobileMenu.style.transform = "translateX(0)";
            document.body.style.overflow = "hidden";
          }
        }

        mobileMenuButton.addEventListener("click", toggleMobileMenu);
        closeMenuButton.addEventListener("click", toggleMobileMenu);

        // Close mobile menu on ESC key
        document.addEventListener("keydown", function (e) {
          if (
            e.key === "Escape" &&
            mobileMenu.style.transform === "translateX(0px)"
          ) {
            toggleMobileMenu();
          }
        });

        // Close mobile menu when clicking outside
        document.addEventListener("click", (e) => {
          if (
            mobileMenu.style.transform === "translateX(0px)" &&
            !mobileMenuButton.contains(e.target) &&
            !mobileMenu.contains(e.target)
          ) {
            toggleMobileMenu();
          }
        });
      });
    </script>
    <%- include('./partials/footer') %>
  </body>
</html>
