<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sport Sphere - All Products</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.2.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
        background-color: #f7f9fc;
      }

      /* Mobile menu styles */
      #mobile-menu {
        will-change: transform;
        backface-visibility: hidden;
      }

      /* Hide scrollbar for Chrome, Safari and Opera */
      #mobile-menu::-webkit-scrollbar {
        display: none;
      }

      /* Hide scrollbar for IE, Edge and Firefox */
      #mobile-menu {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }

      /* Prevent content shift when scrollbar appears/disappears */
      body.overflow-hidden {
        padding-right: var(--scrollbar-width, 0px);
      }
    </style>
  </head>
  <body>
    <!-- Modern Admin Navbar -->
    <nav
      class="bg-white shadow-sm border-b border-gray-100 fixed w-full top-0 z-[1002]"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <span
              class="text-2xl font-bold bg-gradient-to-r from-pink-500 to-purple-500 text-transparent bg-clip-text"
            >
              Sport Sphere Admin
            </span>
          </div>

          <!-- Mobile menu button -->
          <div class="flex md:hidden">
            <button
              id="mobile-menu-button"
              class="z-[1001] p-2 rounded-lg text-gray-700 hover:bg-gray-50 focus:outline-none"
            >
              <i class="ri-menu-line text-2xl"></i>
            </button>
          </div>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-4">
            <a
              href="/owner/admin"
              class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-add-circle-line mr-2"></i>
              Create Product
            </a>
            <a
              href="/owner/allProducts"
              class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-pink-50 text-pink-700"
            >
              <i class="ri-shopping-bag-line mr-2"></i>
              All Products
            </a>
            <a
              href="/owner/orders"
              class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-file-list-line mr-2"></i>
              Orders
            </a>
            <a
              href="/user/logout"
              class="inline-flex items-center px-4 py-2 bg-pink-500 text-white rounded-lg text-sm font-medium hover:bg-pink-600 transition-colors"
            >
              <i class="ri-logout-box-line mr-2"></i>
              Logout
            </a>
          </div>
        </div>
      </div>

      <!-- Mobile Navigation -->
      <div
        id="mobile-menu"
        class="fixed inset-0 bg-white z-[1001] transform translate-x-full transition-transform duration-300 md:hidden"
      >
        <div class="flex flex-col h-full">
          <!-- Mobile Menu Header -->
          <div
            class="flex items-center justify-between p-4 border-b border-gray-100"
          >
            <span
              class="text-xl font-bold bg-gradient-to-r from-pink-500 to-purple-500 text-transparent bg-clip-text"
            >
              Sport Sphere
            </span>
            <button
              id="close-menu-button"
              class="text-gray-500 hover:text-gray-700"
            >
              <i class="ri-close-line text-2xl"></i>
            </button>
          </div>

          <div class="flex-1 px-4 py-6 space-y-4 overflow-y-auto">
            <a
              href="/owner/admin"
              class="block px-3 py-2 rounded-lg text-base font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-add-circle-line mr-2"></i>
              Create Product
            </a>
            <a
              href="/owner/allProducts"
              class="block px-3 py-2 rounded-lg text-base font-medium bg-pink-50 text-pink-700"
            >
              <i class="ri-shopping-bag-line mr-2"></i>
              All Products
            </a>
            <a
              href="/owner/orders"
              class="block px-3 py-2 rounded-lg text-base font-medium text-gray-700 hover:bg-gray-50"
            >
              <i class="ri-file-list-line mr-2"></i>
              Orders
            </a>
            <a
              href="/user/logout"
              class="block px-3 py-2 bg-pink-500 text-white rounded-lg text-base font-medium hover:bg-pink-600"
            >
              <i class="ri-logout-box-line mr-2"></i>
              Logout
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Products Section -->
    <div class="min-h-screen pt-20 pb-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Page Header -->
        <div class="mb-8">
          <h1 class="text-2xl font-bold text-gray-900">All Products</h1>
          <p class="mt-1 text-sm text-gray-500">Manage your store's products</p>
        </div>

        <!-- Products Grid -->
        <div
          class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
        >
          <% products.forEach(product => { %>
          <div
            class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-all duration-300"
          >
            <!-- Product Image -->
            <div
              class="w-full h-64 bg-[<%= product.bgcolor %>] flex items-center justify-center p-6 relative"
            >
              <img
                class="h-48 w-full object-contain transform group-hover:scale-105 transition-transform duration-300"
                src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                alt="<%= product.name %>"
              />
              <% if(product.discount > 0) { %>
              <span
                class="absolute top-4 right-4 bg-green-500 text-white px-2 py-1 rounded-lg text-sm font-medium"
              >
                -₹<%= product.discount %>
              </span>
              <% } %>
            </div>

            <!-- Product Info -->
            <div
              class="p-5 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]"
            >
              <div class="mb-4">
                <h3 class="text-lg font-semibold mb-2"><%= product.name %></h3>
                <span
                  class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800"
                >
                  <%= product.category %>
                </span>
              </div>

              <div class="space-y-2 mb-4">
                <div class="flex justify-between items-center">
                  <span class="text-sm opacity-75">Original Price</span>
                  <span class="text-sm line-through opacity-75"
                    >₹<%= product.price %></span
                  >
                </div>
                <div
                  class="flex justify-between items-center pt-2 border-t border-current border-opacity-10"
                >
                  <span class="font-medium">Final Price</span>
                  <span class="text-lg font-bold"
                    >₹<%= product.price - product.discount %></span
                  >
                </div>
              </div>

              <!-- Actions -->
              <div
                class="flex justify-end pt-4 border-t border-current border-opacity-10"
              >
                <form
                  action="/owner/delete/<%= product._id %>"
                  method="POST"
                  onsubmit="return confirm('Are you sure you want to delete this product?');"
                >
                  <button
                    type="submit"
                    class="inline-flex items-center text-red-500 hover:text-red-700 transition-colors"
                  >
                    <i class="ri-delete-bin-line mr-1"></i>
                    Delete Product
                  </button>
                </form>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Mobile menu functionality
        const mobileMenuButton = document.getElementById("mobile-menu-button");
        const closeMenuButton = document.getElementById("close-menu-button");
        const mobileMenu = document.getElementById("mobile-menu");

        function toggleMobileMenu() {
          if (mobileMenu.style.transform === "translateX(0px)") {
            mobileMenu.style.transform = "translateX(100%)";
            document.body.style.overflow = "";
          } else {
            mobileMenu.style.transform = "translateX(0)";
            document.body.style.overflow = "hidden";
          }
        }

        mobileMenuButton.addEventListener("click", toggleMobileMenu);
        closeMenuButton.addEventListener("click", toggleMobileMenu);

        // Close mobile menu on ESC key
        document.addEventListener("keydown", function (e) {
          if (
            e.key === "Escape" &&
            mobileMenu.style.transform === "translateX(0px)"
          ) {
            toggleMobileMenu();
          }
        });

        // Close mobile menu when clicking outside
        document.addEventListener("click", (e) => {
          if (
            mobileMenu.style.transform === "translateX(0px)" &&
            !mobileMenuButton.contains(e.target) &&
            !mobileMenu.contains(e.target)
          ) {
            toggleMobileMenu();
          }
        });
      });
    </script>
  </body>
</html>
